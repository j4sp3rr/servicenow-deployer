        <api_name>x_snc_deployer.GetDeploymentRecord</api_name>
        <caller_access/>
        <client_callable>false</client_callable>
        <description>Returns the GlideRecord object for the given Deployment by Sys ID or number.</description>
        <mobile_callable>false</mobile_callable>
        <name>GetDeploymentRecord</name>
        <sandbox_callable>false</sandbox_callable>
        <script><![CDATA[function GetDeploymentRecord(vDeployment)
{
	var GetRecord = x_snc_devtools.GetRecord;
	var IsValidRecord = x_snc_devtools.IsValidRecord;
	var GetStringValue = x_snc_devtools.GetStringValue;
	
	var grDeployment = GetRecord('x_snc_deployer_deployment',vDeployment);
	if (IsValidRecord(grDeployment) == true)
	{
		return grDeployment;
	}
	var grDeployment = new GlideRecord('x_snc_deployer_deployment'); 
	grDeployment.addQuery('number','=',GetStringValue(vDeployment));
	grDeployment.query();
	if (grDeployment.next())
	{
		return grDeployment;
	}
	return false;
}]]></script>
