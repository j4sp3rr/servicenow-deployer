        <script><![CDATA[function Prepare()
{
	var grRAS = current.repository_application_status.getRefRecord();
	if (x_snc_devtools.IsValidRecord(grRAS) == false)
	{
		gs.addErrorMessage('No Repository Application Status has been specified.');
		return;
	}

	var grInstance = current.instance.getRefRecord();
	if (x_snc_devtools.IsValidRecord(grInstance) == false)
	{
		gs.addErrorMessage('No Instance has been selected.');
		return;
	}

	if (grInstance.type == 'prod' && grRAS.mode != 'deployment')
	{
		gs.addErrorMessage('This Repository Application Status CANNOT be used for deployments to production instances!');
		return;
	}

	if (TargetInstanceValidate(grInstance) == false)
	{
		gs.addErrorMessage('The target instance could not be validated. Cannot prepare deployment.');
		return;
	}	
	
	if (grRAS.mode == 'checkout')
	{
		current.refresh = true;
	}

	current.state = GetDeploymentState('ready');
	current.update();
}
Prepare();
x_snc_devtools.RedirectToRecord(current);
]]></script>
